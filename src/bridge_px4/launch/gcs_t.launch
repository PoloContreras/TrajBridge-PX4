<launch>
   <arg name="traj_drone1" default="$(find bridge_px4)/trajectories/square_grp_drone4.csv"/>
   <arg name="traj_drone2" default="$(find bridge_px4)/trajectories/square_grp_drone2.csv"/>
   <arg name="traj_drone3" default="$(find bridge_px4)/trajectories/square_grp_drone5.csv"/>
   <arg name="traj_drone4" default="$(find bridge_px4)/trajectories/square_grp_drone1.csv"/>
   <arg name="traj_drone5" default="$(find bridge_px4)/trajectories/square_grp_drone3.csv"/>
   <arg name="traj_drone6" default="$(find bridge_px4)/trajectories/square_grp_drone6.csv"/>

   <arg name="t_fs" default="60"/>
   <arg name="err_tol" default="0.225"/>

   <group ns="drone1">
   	<node pkg="bridge_px4" type="sp_pos_t_node" name ="sp_pos_t_node" output="screen">
           <param name="t_fs" value="$(arg t_fs)"/>
	   <param name="err_tol" value="$(arg err_tol)"/>
	   <param name="traj_id" value="$(arg traj_drone1)"/>
	</node>
   </group>
   <remap from="/drone1/t_start" to="clock_sync/drone1" />


   <group ns="drone2">
   	<node pkg="bridge_px4" type="sp_pos_t_node" name ="sp_pos_t_node" output="screen">
         <param name="t_fs" value="$(arg t_fs)"/>
	      <param name="err_tol" value="$(arg err_tol)"/>
	      <param name="traj_id" value="$(arg traj_drone2)"/>
	</node>
   </group>
   <remap from="/drone2/t_start" to="clock_sync/drone2" />

   <group ns="drone3">
